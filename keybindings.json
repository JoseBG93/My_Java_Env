[
    {
        "key": "ctrl+p ctrl+y",
        "command": "python.execInTerminal"
    },
    {
        "key": "ctrl+r ctrl+enter",
        "command": "workbench.debug.welcome.focus"
    },
    {
        "key": "ctrl+r",
        "command": "-workbench.action.reloadWindow",
        "when": "isDevelopment"
    },
    {
        "key": "ctrl+pausebreak",
        "command": "editor.action.deleteLines",
        "when": "textInputFocus && !editorReadonly"
    },
    {
        "key": "ctrl+shift+k",
        "command": "-editor.action.deleteLines",
        "when": "textInputFocus && !editorReadonly"
    },
    {
        "key": "ctrl+shift+k",
        "command": "workbench.action.terminal.killEditor",
        "when": "terminalHasBeenCreated || terminalProcessSupported"
    },
    {
        "key": "ctrl+shift+k",
        "command": "workbench.action.terminal.kill",
        "when": "terminalHasBeenCreated || terminalIsOpen || terminalProcessSupported"
    },
    {
        "key": "ctrl+r ctrl+p",
        "command": "python.execInTerminal-icon"
    },
    {
        "key": "ctrl+shift+t",
        "command": "-workbench.action.reopenClosedEditor"
    },
    {
        "key": "ctrl+shift+t",
        "command": "python.envManager.openInTerminal"
    },
    {
        "key": "ctrl+i",
        "command": "composerMode.agent"
    },
    {
        "key": "ctrl+alt+r",
        "command": "workbench.action.terminal.sendSequence",
        "args": { "text": "runjava ${fileBasenameNoExtension}\u000D" }
    },
    {
        "key": "ctrl+alt+j",
        "command": "workbench.action.terminal.sendSequence",
        "args": { "text": "javac ${fileBasename} && java ${fileBasenameNoExtension}\u000D" }
    },
    {
        "key": "ctrl+r ctrl+j",
        "command": "workbench.action.tasks.runTask",
        "args": "Run Java with Package"
    },
    {
        "key": "ctrl+alt+n",
        "command": "workbench.action.terminal.sendSequence",
        "args": { "text": "./run_without_package.sh ${fileBasename}\u000D" }
    }
] 